{
    "name":"Time_to_do",
    "version":"1.0",
    "manifest_version":2,
    "content_scripts":[
        {

            "matches":["<all_urls>"],
            "js":["content.js"]

        }

    ],
    "background":{
        "scripts":["js/background.js"],
        "persistent": true

       

    },
    "browser_action":{

        "default_popup": "popup.html",
        "default_title":"timeToDo",
        "default_icon": {                
            "16": "images/icon16.png"
        }
        
    },
"permissions": ["activeTab"]

}